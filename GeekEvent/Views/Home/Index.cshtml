@model IEnumerable<GeekEvent.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Gig Events</h1>
    <p class="lead">
        Welcome
        @{

        }
    </p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Upcoming Gigs</h2>
        <p>
            <ul id="gigs">

                @foreach (var gig in Model)
                {
                    <li>
                        <span class="gig-details">
                            <span class="gig-prop">@gig.DateTime.ToString("dd/MMM/yyyy - HH:MM")</span>
                            <span class="glyphicon glyphicon-option-vertical"></span>

                            <span class="gig-prop">@gig.Venue</span>
                            <span class="glyphicon glyphicon-option-vertical"></span>

                            <span class="gig-prop">@gig.Artist.Name</span>
                            <span class="glyphicon glyphicon-option-vertical"></span>


                        </span>
                    </li>
                }



            </ul>
        </p>
    </div>
    <div class="col-md-6">
        <h2>Gig Calendar View</h2>
        <ul id="gig-calandar">
            @foreach (var gig in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">@gig.DateTime.ToString("MMM-yy")</div>
                        <div class="day">12</div>
                    </div>
                    <div class="details">
                        <span class="artist">@gig.Artist.Name</span>
                        <span class="genre">@gig.Genre.Name</span>
                        <span class="venu">@gig.Venue</span>
                    </div>
                </li>
            }
        </ul>
    </div>

</div>