@model GeekEvent.ViewModel.GigFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<hr />
<br />

@using (Html.BeginForm("Create", "Gig"))
{
   
<p class="alert alert-info">All Fields are <strong>Required.</strong></p>
    @Html.AntiForgeryToken()
    <div class="form-group"> <!--form-inline-->
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" ,placeholder="Venu", autofocus="autofocus" })
        @Html.ValidationMessageFor(m => m.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" , placeholder= DateTime.Now.ToString("dd/MM/yyyy") })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" , placeholder=DateTime.Now.ToString("HH:MM") })
        @Html.ValidationMessageFor(m => m.Time)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genres)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"))
        @Html.ValidationMessageFor(m => m.Genre)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

}
